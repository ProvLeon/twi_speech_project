{
  "expo": {
    "name": "Twi Speech App",
    "slug": "twi_speech_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "twi_speech_app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "image": "./assets/images/splash-icon.png",
        "backgroundColor": "#111827",
        "resizeMode": "contain"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.leon691.twispeechapp",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio for the Twi speech dataset."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.leon691.twispeechapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-splash-screen"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "bd200357-8c8e-4af4-850a-f2c21185cb9c"
      }
    }
  }
}
